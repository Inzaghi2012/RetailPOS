<Window x:Class="RetailPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Child="clr-namespace:RetailPOS.View.Usercontrols"
        Title="MainWindow" Height="Auto" Width="600" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
         </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
            <Child:MenuControl x:Name="MenuCtrl" HorizontalAlignment="Left"  Margin="20,0,0,0"></Child:MenuControl>
            <GroupBox Height="250" Grid.Row="0"  VerticalAlignment="Top" Background="AliceBlue"  Header="Categories">
                <Child:Categories x:Name="cat" HorizontalAlignment="Left"  Margin="20,0,0,0"></Child:Categories>
            </GroupBox>
            <GroupBox Height="250"  Grid.Row="1" VerticalAlignment="Top" Background="AliceBlue" Header="Products">
                <Child:ShowProduct HorizontalAlignment="Left" x:Name="prod"  Margin="20,0,0,0"></Child:ShowProduct>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>