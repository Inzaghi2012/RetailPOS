<UserControl x:Class="RetailPOS.View.Usercontrols.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="Auto" d:DesignWidth="320">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Themes/BureauBlue.xaml"></ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <WrapPanel FlowDirection="LeftToRight">
            <Button Height="53" Margin="5"  HorizontalAlignment="Right" Width="98" >
                <DockPanel>                   
                    <TextBlock TextWrapping="Wrap" VerticalAlignment="center" Margin="5 0 0 0">
                       <Bold>Shop Settings</Bold>
                    </TextBlock>
                </DockPanel>
            </Button>
           <Button Height="53" Margin="3"  HorizontalAlignment="Right" Width="98" >
            <DockPanel>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="center" Margin="5 0 0 0">
                       <Bold>Back Office Settings</Bold>
                </TextBlock>
            </DockPanel>
            </Button>
            <Button Height="53" Width="98" Margin="3"  HorizontalAlignment="Right">
                <DockPanel>
                    <TextBlock Margin="5 0 0 0" TextWrapping="Wrap" VerticalAlignment="center"><Bold>Other Settings</Bold></TextBlock>
                </DockPanel>
            </Button>
          
        </WrapPanel>   
    </Grid>
</UserControl>
